<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white_background">
    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/my_head_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/default_head_image"
            app:radius="10dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/my_realName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="账户名"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/personal_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="个人介绍"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>\
        <ImageButton
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_settings_24"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/attention_author"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="关注作者"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@color/white"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:backgroundTint="@color/teal_200"
            android:id="@+id/collection_news"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="收藏记录"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@color/white"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:id="@+id/history_news"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="历史记录"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@color/white"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>
    <com.example.textualreaddemo.detailpage.NestedScrollableHost
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_myPage"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="400dp"/>
    </com.example.textualreaddemo.detailpage.NestedScrollableHost>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/switch_account"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="切换账号"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_background"/>
        <TextView
            android:layout_marginLeft="110dp"
            android:id="@+id/log_out"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="退出登录"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_background"/>
    </LinearLayout>

</LinearLayout>